<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
      <div class="panel-heading">
          <h3 class="panel-title">Please Sign In</h3>
      </div>
      <div class="panel-body">
        <%= form_for(@user, as: :user, url: session_path(@user)) do |f| %>
          <fieldset>
            <div class="form-group">
              <%= f.email_field :email, class: "form-control", placeholder: "E-mail", autofocus: "" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, class: "form-control", placeholder: "Password", value: "" %>
            </div>
<!--             <div class="checkbox">
              <label>
                  <input name="remember" type="checkbox" value="Remember Me">Remember Me
              </label>
            </div> -->
            <%= f.submit "Login", class: "btn btn-lg btn-success btn-block" %>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>