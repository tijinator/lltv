<h2><%= @course.title %> chapters</h2>

<div class="panel panel-info">
  <div class="panel-heading">
    <div class="row" style="margin: 0;">
			<div class="col-md-4" style="padding: 0;">Chapters</div>
		  <div class="col-md-4 col-md-offset-4" style="padding: 0;">
				<%= link_to new_course_chapter_path(@course), {style: "float: right;"} do %>
					<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Chapter
				<% end %>
			</div>
		</div>
  </div>

  <div class="panel-body" style="text-transform: uppercase; margin-bottom: 15px">
    <% @chapters.each do |chapter| %>
      <div class="row" style="margin: 0;">
        <div class="col-md-4" style="padding: 0;">
          <h4><%= chapter.title %></h4>
          <p> Chapter position: <%= chapter.position %> </p>
        </div>
        <div class="col-md-4 col-md-offset-4" style="padding: 0;">
          <div class="" style="float: right;">
            <%= link_to "edit", edit_course_chapter_path(@course, chapter.id), class: 'btn btn-default edit-btn' %>
            <%= link_to "delete", course_chapter_path(@course, chapter.id), method: :delete, data: {confirm: 'Are you sure you want to delete this video?'}, class: 'btn btn-danger delete-btn'%>
            <%= link_to new_chapter_video_path(chapter), {style: "float: right;", class: 'btn btn-default edit-btn'} do %>
              <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Video
            <% end %>
          </div>
        </div>
      </div>

      <!-- Chapter Video -->
      <br>
      <% unless chapter.video.nil? %>
      <div class="col-md-12 well">
        <div class="col-md-4" style="padding: 0;">
          <span style='font-size: 16px'><%= chapter.title %> Video: </span> <%= chapter.video.title %>
        </div>

        <div class="col-md-4 col-md-offset-4" style="padding: 0;">
          <div class="" style="float: right;">
            <%= link_to "edit", edit_chapter_video_path(chapter, chapter.video), class: 'btn btn-default edit-btn' %>
            <%= link_to "delete", chapter_video_path(chapter, chapter.video),method: :delete, data: {confirm: 'Are you sure you want to delete this video?'}, class: 'btn btn-default edit-btn' %>
          </div>
        </div>
      </div>
      <% else %>
        <p>No Video in this chapter: <%= chapter.title %></p>
      <% end %>
      <!-- Chapter Video END -->

    <% end %>
  </div>
</div>




<% block do %>

<div class="panel panel-info">
  <div class="panel-heading">
    <div class="row" style="margin: 0;">
      <div class="col-md-4" style="padding: 0;">Videos</div>
      <!-- <div class="col-md-4 col-md-offset-4" style="padding: 0;">
        <%= link_to new_video_path, {style: "float: right;"} do %>
          <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Video
        <% end %>
      </div> -->
    </div>
  </div>

  <div class="panel-body" style="text-transform: uppercase;">
    <% @chapters.each do |chapter| %>
      <% chapter.videos.each do |video| %>
        <div class="row" style="margin: 0;">
          <div class="col-md-4" style="padding: 0;">
            <%= video.title %>
          </div>
          <div class="col-md-4 col-md-offset-4" style="padding: 0;">
            <div class="" style="float: right;">

              <%= link_to "edit", edit_chapter_video_path(chapter, video), class: 'btn btn-default edit-btn' %>

              <%= link_to "delete", chapter_video_path(chapter, video),method: :delete, data: {confirm: 'Are you sure you want to delete this video?'}, class: 'btn btn-default edit-btn' %>
            </div>
          </div>
        </div>
        <hr>
      <% end %>
    <% end %>
  </div>
</div>

<% end %>