<div class="row">
  <div class="col-xs-4 col-xs-offset-1">
    <div class="row">
      <div>
        <h2>Create Course!</h2>
      </div>
      <div>
        <%= form_for (@course), url: url do |f| %>

          <div class="form-group">
            <%= label_tag :title, "Course Title" %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= label_tag :banner_url, "Course Banner Image" %>
            <%= f.file_field :banner_url, class: "form-control" %>

            <%= image_tag(@course.banner_url_url) if @course.banner_url? %>
            <%= f.hidden_field :banner_url_cache %>


              <p>
                <%= f.check_box :remove_banner_url, {}, true %>
                Remove Image
              </p>
          </div>
          <div class="form-group">
            <%= label_tag :details, "Course Details" %>
            <%= f.text_area :details, size: "60x12",class: "form-control" %>
          </div>
          <div class="form-group">
            <%= label_tag :position, "Course Position" %>
            <%= f.text_field :position, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "Submit", class: "form-control" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
