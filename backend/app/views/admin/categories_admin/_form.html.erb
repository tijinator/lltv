<%= form_for(@category, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>
      <ul>
      <% @category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :parent_id , class: 'col-sm-2 control-label'%>
    <div class="col-sm-6">
      <%= f.select(:parent_id, Category.where(parent_id: nil).map{|x| [x.title, x.id]}, {prompt: 'I am Parent Category'}, {class: 'form-control'}) %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :title , class: 'col-sm-2 control-label'%>
    <div class="col-sm-6">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :details , class: 'col-sm-2 control-label'%>
    <div class="col-sm-6">
      <%= f.text_field :details, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :position , class: 'col-sm-2 control-label'%>
    <div class="col-sm-6">
      <%= f.number_field :position, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :html_tab_id , class: 'col-sm-2 control-label'%>
    <div class="col-sm-6">
      <%= f.text_field :html_tab_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :html_tab_color , class: 'col-sm-2 control-label'%>
    <div class="col-sm-6">
      <%= f.text_field :html_tab_color, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :html_color , class: 'col-sm-2 control-label'%>
    <div class="col-sm-6">
      <%= f.text_field :html_color, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :homepage_position , class: 'col-sm-2 control-label'%>
    <div class="col-sm-6">
      <%= f.number_field :homepage_position, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :small_image_url, class: 'col-sm-2 control-label'%>
    <div class="col-sm-6">
      <%= f.file_field :small_image_url, class: 'form-control' %>
      
      <%= image_tag(@category.small_image_url_url) if @category.small_image_url? %>
      <%= f.hidden_field :small_image_url_cache %>
    </div>
  </div>

  <div class="form-group">
    <%#= f.text_field :banner_url %>
    <%= f.label :banner_url , class: 'col-sm-2 control-label'%>
    <div class="col-sm-6">
      <%= f.file_field :banner_url, class: 'form-control' %>

      <%= image_tag(@category.banner_url_url) if @category.banner_url? %>
      <%= f.hidden_field :banner_url_cache %>
    </div>
  </div>

  <div class="form-group">
    <div class="actions col-sm-2 col-sm-offset-2">
      <%= f.submit 'Submit', class: 'btn btn-primary' %>
    </div>
  </div>

<% end %>
