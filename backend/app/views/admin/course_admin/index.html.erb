<h1>Courses</h1>

<div class="panel panel-info">
	<div class="panel-heading">
		<div class="row" style="margin: 0;">
			<div class="col-md-4" style="padding: 0;">Course Title</div>
		  <div class="col-md-4 col-md-offset-4" style="padding: 0;">
				<!-- <a href="#" style="float: right;"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Course</a> -->
				<%= link_to new_course_path, {style: "float: right;"} do %>
					<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Course
				<% end %>
			</div>
		</div>
	</div>

	<div class="panel-body">
		<% @courses.each do |c| %>
		<div class="row" style="margin: 0;">
			<div class="col-md-4" style="padding: 0;">
				<%= c.title %>
			</div>
			<div class="col-md-4 col-md-offset-4" style="padding: 0;">
				<div class="" style="float: right;">
					<%= link_to "edit", edit_course_path(c), class: 'btn btn-default edit-btn' %>
					<%= link_to "delete", course_path(c), method: :delete, data: {confirm: 'Are you sure you want to delete this video?'}, class: 'btn btn-danger delete-btn'%>
				</div>
			</div>
		</div>
		<hr>
		<% end %>
	</div>
</div>


