<div class="well">
  <div class="row" style="margin: 0;">
    <h1>Course <%= @course.title %></h1>
  </div>
  <div class="row" style="margin: 0;">
    <%= @course.details %>
  </div>
</div>

<div class="panel panel-info">
  <div class="panel-heading">
    <div class="row" style="margin: 0;">
			<div class="col-md-4" style="padding: 0;">Chapters</div>
		  <div class="col-md-4 col-md-offset-4" style="padding: 0;">
				<%= link_to new_course_chapter_path(@course), {style: "float: right;"} do %>
					<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Chapter
				<% end %>
			</div>
		</div>
  </div>

  <div class="panel-body">
    <% @chapters.each do |chapter| %>
      <div class="row" style="margin: 0;">
        <div class="col-md-4" style="padding: 0;">
          <%= chapter.title %>
        </div>
        <div class="col-md-4 col-md-offset-4" style="padding: 0;">
          <div class="" style="float: right;">
            <%= link_to "edit", edit_course_chapter_path(@course, chapter.id), class: 'btn btn-default edit-btn' %>
            <%= link_to "delete", course_chapter_path(@course, chapter.id), method: :delete, data: {confirm: 'Are you sure you want to delete this video?'}, class: 'btn btn-danger delete-btn'%>
          </div>
        </div>
      </div>
      <hr>
    <% end %>
  </div>
</div>
