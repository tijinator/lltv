<div class="panel panel-info">
	<div class="panel-heading">
		<div class="row" style="margin: 0;">
			<div class="" style="float: left;">
				<h3>Videos Title</h3>
			</div>
			<div class="" style="float: right;">
				<%= link_to new_video_path do %>
					<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Video
				<% end %>
			</div>
		</div>
	</div>

	<div class="panel-body">
		<% @videos.each_with_index do |video, index| %>
			<%#= link_to "#{index}: #{video.title}", video %> <%#= link_to 'DELETE', video, method: :delete %>

			<div class="row" style="margin: 0;">
				<div class="" style="float: left;">
					<%= link_to video.title, video %>
				</div>
				<div class="" style="float: right;">
					<%= link_to "edit", edit_video_path(video), class: 'btn btn-default' %>
					<%= link_to "delete", video_path(video), method: :delete, data: {confirm: 'Are you sure you want to delete this video?'}, class: 'btn btn-danger' %>
				</div>
			</div>
			<hr>
			<!-- <%= link_to video.title, video %> | <%= link_to "edit", edit_video_path(video), class: 'btn btn-default' %><br> -->
		<% end %>
	</div>
</div>
