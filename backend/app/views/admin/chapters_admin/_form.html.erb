<div class="row">
  <div>
    <%= form_for @chapter, url: url do |f| %>
      <div class="form-group">
        <%= label_tag :title, "Chapter Title" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :details, "Chapter Details" %>
        <%= f.text_area :details, size: "60x12",class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :position, "Chapter Position" %>
        <%= f.text_field :position, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :duration, "Chapter duration in seconds" %>
        <%= f.text_field :duration, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Submit", class: "form-control" %>
      </div>
    <% end %>
  </div>
</div>
