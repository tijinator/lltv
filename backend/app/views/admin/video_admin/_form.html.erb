<%= form_for (@video) do |f| %>
	<div class="form-horizontal">
		<div class="form-group">
			<!-- <%= f.label :chapter_id , class: "col-sm-2 control-label"%>
			<div class="col-sm-6">
				<%= f.number_field :chapter_id, class: 'form-control' %>
			</div> -->
			<%= f.hidden_field :chapter_id, {value: @id } %>
		</div>

		<div class="form-group">
			<%= f.label :title, class: "col-sm-2 control-label"%>
			<div class="col-sm-6">
				<%= f.text_field :title, class: "form-control"%>
			</div>
		</div>

		<div class="form-group">
			<%= f.label :video, class: "col-sm-2 control-label"%>
			<div class="col-sm-6">
				<%= f.file_field :video_url, class: "form-control"%>
			</div>
		</div>
		<br>
		<div class="form-group">
			<%= f.label :details, class: "col-sm-2 control-label"%>
			<div class="col-sm-6">
				<%= f.text_area :details, class: "form-control"%>
			</div>
		</div>

		<div class="form-group">
			<%= f.label :transcript, class: "col-sm-2 control-label"%>
			<div class="col-sm-6">
				<%= f.text_field :transcript, class: "form-control"%>
			</div>
		</div>

		<div class="form-group">
			<%= f.label :faqs, class: "col-sm-2 control-label"%>
			<div class="col-sm-6">
				<%= f.text_field :faqs, class: "form-control"%>
			</div>
		</div>

		<div class="form-group">
			<%= f.label :position, class: "col-sm-2 control-label"%>
			<div class="col-sm-6">
				<%= f.number_field :position, class: "form-control"%>
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-2 col-sm-offset-2">
				<%= f.submit 'Submit', class: "btn btn-primary" %>
			</div>
		</div>

	</div>
<% end %>
