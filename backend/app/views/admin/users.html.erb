<div class="row" style="margin: 0;">
  <div class="col-lg-12" style="padding: 0;">
   <h1 class="page-header">Users</h1>
  </div>
</div>
<div class="row" style="margin: 0;">
  <div class="col-lg-12" style="padding: 0;">
   <div class="panel panel-info">
    <div class="panel-heading">
      <!-- User Table -->
      <div class="row" style="margin: 0;">
        <div class="col-sm-4">
          Name
        </div>
        <div class="col-sm-4">
          Email
        </div>
        <div class="col-sm-4">
          Role
        </div>
      </div>
    </div>
    <!-- /.panel-heading -->

    <div class="panel-body" style="color: #337ab7;">
      <% @users.each do |user| %>
      <div class="row" style="margin: 0;">
        <div data-id="<%= user.id %>">
          <div class="col-sm-4">
            <%= user.full_name %>
          </div>
          <div class="col-sm-4">
            <%= user.email %>
          </div>
          <div class="col-sm-4">
            <%= form_for(user) do |f| %>
              <span>
                <%= f.select(:role, RolesHelper.list_roles, {}, {class: 'btn btn-default'}) %>
              </span>
              <span style="float: right;">
                <%= f.submit "Update", class: 'btn btn-default' %>
              </span>
            <% end %>
          </div>

        </div>
      </div>
      <hr>
      <% end %>
    </div>




