<div class="col-md-6 col-md-offset-3">
  <div class="table">
    <div>
      <div>Name</div>
      <div>Email</div>
      <div>Role</div>
      <div></div>
    </div>
    <% @users.each do |user| %>
        <%= form_for(user) do |f| %>
          <div><%= user.full_name %></div>
          <div><%= user.email %></div>
          <div><%= f.select(:role, [['General', 0], ['Data Entry', 10], ['Publisher', 20], ['Superuser', 30]]) %></div>
          <div><%= f.submit('Update') %></div>
        <% end %> 
    <% end %>
</div>
