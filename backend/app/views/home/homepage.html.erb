<div ng-app="lltv">
  <div id="landing-homepage">
    <img src="<%= image_path('LLTV_homepage.jpg')%>" style="width: 100%; position: relative; top: 0; left: 0">
    <nav id="home-nav" class="navbar navbar-fixed-top" role="navigation" style="background-image: url('<%= image_path('LLTV_blackgradient.png') %>'); min-height: 315px;">
        <!-- Brand and toggle get grouped for better mobile display -->
      <div class="container" style="position: relative; top: 0; left: 0">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbarCollapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#"><img src="<%= image_path('LLTV_logo.png') %>"></a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse pull-right homepage-nav-links" id="navbarCollapse">
          <ul class="nav navbar-nav">
            <li class="active"><a ui-sref="categories.show"><img src="<%= image_path('LLTV_searchicon.png') %>"></a></li>
            <li>Business</li>
            <li>Academic</li>
            <li>Government</li>
            <li ng-controller="AuthModalCtrl"><div ng-click="openModal(signin)">Sign In</div></li>
            <li ng-controller="AuthModalCtrl"><div class="bubble-btn sign-up" ng-click="openModal('register')">Sign Up</div></li>
          </ul>
        </div>
      </div>
    </nav>
  <!--   <div>
      <ul class="nav nav-tabs homepage-category-nave">
        <li>Learn Design</li>
        <li>Engineering</li>
        <li>Learn Architecture</li>
      </ul>
    </div> -->
    <div>

      <!-- Nav tabs -->
      <ul class="nav nav-tabs homepage-category-nav" role="tablist">
        <% @categories.each_with_index do |category, idx| %>
          <li role="presentation"
            style="background-color: <%= category.html_tab_color %>"
            <% if idx == 0 %>class="active"<% end %>>
            
            <div href="#<%= category.html_tab_id %>" aria-controls="<%= category.html_tab_id %>" role="tab" data-toggle="tab"><%= category.title %></div></li>
        <% end %>
      </ul>

      <!-- Tab panes -->
      <div class="tab-content container-fluid">
        <% @categories.each_with_index do |category, idx| %>
          <div role="tabpanel"
            class="tab-pane row <% if idx == 0 %>active<% end %>" id="<%= category.html_tab_id %>">

            <div class="col-md-6">
              <div class="row">
                <img src="<%= image_path('LLTV_designimage.jpg') %>">
              </div>
            </div>
            <div class="col-md-6">
              <div class="row">
                <div class="col-md-12">
                  <h3 style="color: <%= category.html_color %>">
                  <%= category.title %> Training + Tutorials
                  </h3>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12 category-details">
                  <p><%= category.details %></p>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <a ui-sref="category.show({id: <%= category.id %>})">
                    <div class="bubble-btn pull-left" style="background-color: <%= category.html_color %>;">
                      Browse <%= category.title %> Tutorials
                    </div>
                  </a>
                  <!-- <a ui-sref="register"> -->
                  <div ng-controller="AuthModalCtrl">
                    <div class="pull-right bubble-btn create-account" ng-click="openModal('register')">
                        Create Account
                    </div>
                  </div>
                  <!-- </a> -->
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <footer class="homepage-footer">
    </footer>
  </div>



  <div id="lltv-app-content" style="display: none;">
    <ui-view></ui-view>
  </div>
</div>